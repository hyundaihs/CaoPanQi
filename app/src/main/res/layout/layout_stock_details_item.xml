<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/stock_details_item_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="日期"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/stock_details_item_high"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="最高位"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/stock_details_item_low"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="最低位"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/stock_details_item_close"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="收盘"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/stock_details_item_amplitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="振幅"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/stock_details_item_empty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="多空"
        android:textColor="@android:color/white" />

</LinearLayout>
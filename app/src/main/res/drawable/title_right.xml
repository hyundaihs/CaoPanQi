<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#3f000000" />

            <corners android:radius="4dp" />

            <stroke android:width="3dp" android:color="@android:color/holo_blue_dark" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <solid android:color="#0c000000" />

            <corners android:radius="4dp" />

            <stroke android:width="3dp" android:color="@android:color/holo_blue_light" />
        </shape></item>
    <item><shape>
            <solid android:color="#0c000000" />

            <corners android:radius="4dp" />

            <stroke android:width="1dp" android:color="#33000000" />
        </shape></item>

</selector>
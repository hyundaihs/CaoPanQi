<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dashuai.android.treasuremap">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 往sdcard中读写数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 获取设备ID权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 震动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 全局性对话框权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name="com.dashuai.android.treasuremap.CPQApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.HomepageActivity"></activity>

        <service android:name=".service.CurrentDataService"></service>

        <activity android:name=".ui.SearchStockActivity"></activity>
        <activity android:name=".ui.StockDetailsActivity"></activity>
        <activity android:name=".ui.StockDetailsTVActivity"></activity>
        <activity android:name=".ui.RegisteActivity"></activity>
        <activity android:name=".ui.HelpActivity"></activity>
        <activity android:name=".ui.AboutActivity"></activity>
        <activity android:name=".ui.StockWarnActivity"></activity>
        <activity android:name=".ui.SetWarnActivity"></activity>
        <activity android:name=".ui.VideosActivity"></activity>
        <activity android:name=".ui.VideoActivity"></activity>
        <activity android:name=".ui.MoreBeizhuActivity"></activity>
        <activity android:name=".ui.MoreBeizhuTVActivity"></activity>
        <activity android:name=".ui.EmulatorActivity"></activity>
        <activity android:name=".ui.BuyActivity"></activity>
        <activity android:name=".ui.SellActivity"></activity>
        <activity android:name=".ui.ChooseStockActivity"></activity>
        <activity android:name=".ui.DeviceActivity"></activity>
        <activity android:name=".ui.ScoreActivity"></activity>
        <activity android:name=".ui.ScoreDetailsActivity"></activity>
    </application>

</manifest>